{% extends 'base.html.twig' %}

{% block title %}Devoir{% endblock %}

{% block body %}
    <h1>Devoir</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ devoir.id }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ devoir.nom}}</td>
            </tr>
            <tr>
                <th>HeureDebut</th>
                <td>{{ devoir.heureDebut ? devoir.heureDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HeureFin</th>
                <td>{{ devoir.heureFin ? devoir.heureFin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ devoir.score }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ devoir.etat ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>NbrQuestion</th>
                <td>{{ devoir.nbrQuestion }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_devoir_index') }}">back to list</a>

    <a href="{{ path('app_devoir_edit', {'id': devoir.id}) }}">edit</a>

    {{ include('devoir/_delete_form.html.twig') }}
{% endblock %}
