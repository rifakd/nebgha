<!DOCTYPE html>

<title>Offre</title>

{% block body %}
    <h1>Offre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ offre.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offre.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ offre.type }}</td>
            </tr>
            <tr>
                <th>DateLancement</th>
                <td>{{ offre.dateLancement ? offre.dateLancement|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateExpiration</th>
                <td>{{ offre.dateExpiration ? offre.dateExpiration|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PrixOriginal</th>
                <td>{{ offre.prixOriginal }}</td>
            </tr>
            <tr>
                <th>PrixReduit</th>
                <td>{{ offre.prixReduit }}</td>
            </tr>
            <tr>
                <th>PourcentageReduction</th>
                <td>{{ offre.pourcentageReduction }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ offre.statut ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_offre_index') }}">back to list</a>

    <a href="{{ path('app_offre_edit', {'id': offre.id}) }}">edit</a>

    {{ include('offre/_delete_form.html.twig') }}
{% endblock %}
